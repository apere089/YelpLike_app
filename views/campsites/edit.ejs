<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Edit <%= camp.name %></h1>
    <div style="width: 30%; margin: 30px auto;">
      <form action="/campsites/<%= camp._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="campsite[name]" value="<%= camp.name %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="campsite[image]" value="<%= camp.image %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="campsite[description]" value="<%= camp.description %>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit Changes</button>
        </div>
      </form>
      <a href="/campsites">Go Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>