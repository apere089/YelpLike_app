<% include ../partials/header %>
<div class="container">
  <div class="jumbotron">
    <h1>Welcome to YelpCamp!</h1>
    <p>View our hand-picked campgrounds from all over the world</p>
    <a class="btn btn-lg btn-primary" href="/campsites/new">Add New Campsites</a>
  </div>
  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% camps.forEach((camp) => { %>
      <div class= "col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= camp.image %>" alt="Campsite Image">
          <div class="caption">
            <h4><%= camp.name %></h4>
          </div>
          <a class="btn btn-lg btn-primary" href="/campsites/<%= camp._id %>">More Info</a>
        </div>
      </div>
    <% }); %>
  </div>
</div>
<% include ../partials/footer %>